<% layout('template') %>
    <!-- SLIDER -->
    <section class="slider d-flex align-items-center">
        <!-- <img src="images/slider.jpg" class="img-fluid" alt="#"> -->
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="col-md-12">
                    <div class="slider-title_box">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="slider-content_wrap">
                                    <h1>Discover great climbing gyms</h1>
                                    <h5>See authentic reviews from climbers.</h5>
                                </div>
                            </div>
                        </div>
                        <div class="row d-flex justify-content-center">
                            <div class="col-md-10">
                                <form class="form-wrap mt-4" action="/gyms" method="get">
                                    <div class="btn-group justify-content-center" role="group" aria-label="Basic example">
                                        <input type="text" placeholder="What are your looking for?" class="btn-group1" name="search">
                                        <button type="submit" class="btn-form"><span
                                                class="icon-magnifier search-icon"></span>SEARCH<i
                                                class="pe-7s-angle-right"></i></button>
                                    </div>
                                </form>
                                <div class="slider-link">
                                     <a href="/gyms?sortby=new">Recently Added</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--// SLIDER -->

    <!--============================= FEATURED PLACES =============================-->
    <section class="main-block light-bg">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-5">
                    <div class="styled-heading">
                        <h3>Closest to you</h3>
                    </div>
                </div>
            </div>
            <div class="row">
                <% for( let gym of gyms) { %>
                    <div class="col-md-4 featured-responsive">
                        <div class="featured-place-wrap">
                            <a href="/gyms/<%= gym._id %>">
                                <img src="<%= gym.images[0] %>" class="img-fluid" alt="#">
                                <span class="featured-rating-orange"><%= gym.average_rating %></span>
                                <div class="featured-title-box">
                                    <h6><%= gym.name %></h6>
                                    <p>Climbing gym </p> <span>• </span>
                                    <p><%= gym.reviews.length %> Reviews</p> <span> • </span>
                                    <p><span>$<%= gym.price %></span></p>
                                    <ul>
                                        <li><span class="icon-location-pin"></span>
                                            <p><%= gym.location_string %></p>
                                        </li>
                                        <li><span class="icon-screen-smartphone"></span>
                                            <p><%= gym.contact %></p>
                                        </li>
    
                                    </ul>
                                    <div class="bottom-icons">
                                        <span class="ti-heart"></span>
                                        <span class="ti-bookmark"></span>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                <% } %>

            </div>
            <div class="row justify-content-center">
                <div class="col-md-4">
                    <div class="featured-btn-wrap">
                        <a href="/gyms" class="btn btn-danger">VIEW ALL</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--//END FEATURED PLACES -->

