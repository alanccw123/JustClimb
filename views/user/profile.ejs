<% layout('template') %>

    <div class="container py-5">

  
      <div class="row">
        <div class="col-lg-6 mx-auto">
          <div class="card mb-4">
            <div class="card-body text-center">
              <img src="https://source.unsplash.com/random/900X700/?avatar" alt="avatar"
                class="rounded-circle img-fluid" style="width: 150px;">
              <h5 class="my-3">John Smith</h5>
              <% if (user.isOwner) { %>
                <p class="text-muted mb-1">Gym Owner</p>
              <% } %>
              <p class="text-muted mb-4">Bay Area, San Francisco, CA</p>
              <div class="d-flex justify-content-center mb-2">
              </div>
            </div>
          </div>

          <div class="card mb-4">
            <div class="card-body">
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Email</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= user.email %></p>
                </div>
              </div>
              <hr>
              <% if (user.isOwner) { %>
                <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Gyms</p>
                    </div>
                    <div class="col-sm-9">
                    <% for( let gym of gyms ) { %>
                       
                            <a href="/gyms/<%= gym._id %>"><p class="text-muted mb-0"><%= gym.name %></p></a>            
                    <% } %>
                  </div>
                  </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>