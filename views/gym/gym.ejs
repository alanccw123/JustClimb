<% layout('template') %>
<link rel="stylesheet" type="text/css" href="/stylesheets/starability-basic.min.css"/>


<div class="row">
  <div class="col-6">
    <div class="card mb-3" >
      
        <div id="carouselExampleIndicators" class="carousel slide">
          <div class="carousel-inner">
            <% for( image of gym.images) { %>
              <div class="carousel-item">
                <img src="<%= image %>" class="d-block w-100" alt="">
              </div>
            <% } %>       
          </div>

          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
   
      
      <div class="card-body">
        <h5 class="card-title"><%= gym.name %></h5>
        <p class="card-text"><%= gym.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= gym.location %></li>
        <li class="list-group-item">Price</li>
      </ul>
      <% if (isLoggedin && loggedinUser._id.equals(gym.owner)) { %>
        <div class="card-body">
          <a class="btn btn-primary" href="/gyms/<%= gym._id %>/edit">Edit</a>
          <form class="d-inline" action="/gyms/<%= gym._id %>/delete?_method=Delete" method="post">
            <button class="btn btn-primary">Delete</button>
          </form>
        </div>
      <% } %>
      
    </div>
  </div>
  
  <div class="col-6">
    <img src="https://maps.googleapis.com/maps/api/staticmap?size=400x400&zoom=14&markers=color:blue|<%= gym.location.coordinates[1] %>,<%= gym.location.coordinates[0] %>&key=<%= process.env.googlemap_api_key%>" alt="">
    <h5>How do climbers think about this place?</h3>
    <div>
      
      <form class="d-inline" action="/gyms/<%= gym._id %>/reviews" method="post">
        <div class="">
          <fieldset class="starability-basic">
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>
        
        <textarea name="review[comment]" id="" cols="30" rows="2" required>Leave your comments here!</textarea>
        <button class="btn btn-primary mb-3">submit</button>
      </form>
    </div>
        <% for( review of gym.reviews) { %>
          <div class="card">
            <div class="card-body">
              <p class="starability-result" data-rating="<%= review.rating %>">
              <p><%= review.comment %></p>
              <p><%= review.createdAt %></p>
              <form action="/gyms/<%=gym._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
                <button class="btn btn-sm btn-danger">Delete</button>
            </form>
            </div>        
          </div>      
        <% } %>
  </div>
</div>

<script>
 document.querySelector(".carousel-inner").firstElementChild.classList.add("active");
</script>



